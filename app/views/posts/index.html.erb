<h3>新闻列表</h3>
<table class="admin">
  <tr>
    <th>标题</th>
    <th>置顶</th>
    <th>创建时间</th>
    <th colspan="2" >操作</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <th scope="row"class="spec"><%=  link_to post.title, edit_post_path(post),:class=>"textcut30" %></th>
    <td><%= post.top %></td>
    <td><%= post.created_at.strftime("%Y-%m-%d  %I:%M%p") %></td>
    <td class="action-link"><%= link_to '修改', edit_post_path(post) %></td>
    <td class="action-link"><%= link_to '删除', post, method: :delete, data: { confirm: '确定删除?' } %></td>
  </tr>
<% end %>
</table>
<br />

<%= will_paginate @posts,:previous_label=>"上一页",:next_label=>"下一页",:class=>"apple_pagination"  %>
<%= link_to '新增文章', new_post_path %>
