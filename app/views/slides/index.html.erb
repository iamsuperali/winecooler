<h3>幻灯片列表</h3>

<table class="admin">
  <tr>
    <th>标题</th>
    <th>链接</th>
    <th>图片</th>
    <th colspan="2">操作</th>
  </tr>

<% @slides.each do |slide| %>
  <tr>
    <td scope="row"class="spec"><%= slide.title %></td>
    <td><%= slide.link %></td>
    <td><%= image_tag slide.image.url(:thumb),:width=>"80",:height=>"60" %></td>
    <td class="action-link"><%= link_to '修改', edit_slide_path(slide) %></td>
    <td class="action-link"><%= link_to '删除', slide, method: :delete, data: { confirm: '您确定？' } %></td>
  </tr>
<% end %>
</table>

