<% content_for :title, "法国拉苏米亚葡萄酒柜（La Sommelière）- 公司新闻" %>
<div class="bandeauHaut"  style="background-image:url('<%=asset_path("news_bg.jpg")%>')">
  <div class="AccrocheListeRub" style="margin-right:-475px; top:24px; width:537px;">
    <h3>公司新闻</h3>
    <p class="accrochePage">在这里查看公司的最新资讯</p>
  </div>
</div>
<div id="centreSite" class="body">
  <div id="contenuCentre">
    <%  @posts.each do |p|%>
      <div class="capsActu">
        <div class="contenuActu">
          <%=generate_feature_image(p)%>
          <p><%= p.created_at.strftime("%Y-%m-%d") %></p>
          <h2><a href="/posts/<%=p.id%>"><%=p.title%></a></h2>
          <%= (truncate(strip_tags(p.content), :length => 190, :omission => '...')).html_safe %>
        </div>
      </div>
    <%end%>
    <br style="clear: both;" />
  </div>
  <div style="clear:both;" ></div>
</div>
