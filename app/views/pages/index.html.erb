<h3>页面列表</h3>

<table class="admin">
  <tr>
    <th>标题</th>
    <!--th>状态</th-->
    <!--th>url</th-->
    <th colspan="2">操作</th>
  </tr>

  <% @pages.each do |page| %>
    <tr>
      <td class="spec"><%= page.title %></td>
      <!--td><%= page.status %></td-->
      <!--td><%= page.permalink %></td-->
      <td class="action-link"><%= link_to '编辑', edit_page_path(page) %></td>
      <td class="action-link"><%= link_to '删除', page, method: :delete, data: { confirm: '您确定?' } %></td>
    </tr>
  <% end %>
</table>

